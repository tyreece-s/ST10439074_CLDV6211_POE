@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Index";
}

@* Bold Heading and Create Button *@
<h1><strong>All Venues</strong></h1>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle-fill me-1"></i>
    Add Venue
</a>

@* Thick Divider Line *@
<hr class="mb-4" style="height: 3px; background-color: #000; border: none;" />


@* Displaying the Venues with Cards instead of the basic table using Bootstrap *@

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        @* Card *@
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3">
                @* Image at the top *@
                <img src="@item.ImageUrl"
                     class="card-img-top rounded-top"
                     alt="Venue Image"
                     style="height: 250px; object-fit: cover;"/>

                @* Card Details for Venue *@
                <div class="card-body">
                    <h5 class="card-title mb-2"><strong>@item.VenueName</strong></h5>
                    <p class="card-text mb-1">
                        <i class="bi bi-geo-alt-fill me-1"></i>
                        <strong>@Html.DisplayNameFor(Model => Model.Location):</strong>
                        @item.Location
                    </p>
                    <p class="card-text">
                        <i class="bi bi-person-arms-up me-1"></i>
                        <strong>@Html.DisplayNameFor(Model => Model.Capacity):</strong>
                        @item.Capacity
                    </p>
                </div>

                @* Card Buttons for Edit|Details|Delete *@
                <div class="card-footer bg-transparent border-top-0">
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pen-fill me-1"></i>
                        Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-secondary me-1">
                        <i class="bi bi-info-circle-fill me-1"></i>
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill me-1"></i>
                        Delete
                    </a>
                </div>
            </div>
        </div>
    }
</div>